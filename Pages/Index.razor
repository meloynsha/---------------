    }

    .contact label {
        display: block;
        margin-bottom: 0.5rem;
    }

    .contact input, .contact textarea {
        width: 100%;
        padding: 0.5rem;
        margin-bottom: 1rem;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .contact button {
        background: #007BFF;
        color: #fff;
        border: none;
        padding: 0.5rem 1rem;
        cursor: pointer;
    }

    footer {
        background: #333;
        color: #fff;
        text-align: center;
        padding: 1rem 0;
    }
</style>