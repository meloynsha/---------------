        background: #fff;
        color: #007BFF;
        border: none;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        cursor: pointer;
    }

    .tours, .about, .contact {
        padding: 2rem 1rem;
        text-align: center;
    }

        .tours h2, .about h2, .contact h2 {
            margin-bottom: 1.5rem;
        }

    .content-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
    }

    .card {
